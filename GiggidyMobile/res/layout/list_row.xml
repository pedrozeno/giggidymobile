<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/artistImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />
    
    <!-- Artist Name -->

    <TextView
        android:id="@+id/gigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/artistImg"
        android:layout_toRightOf="@+id/artistImg"
        android:paddingTop="3dp"
        android:textColor="#254156"
        android:textSize="@dimen/gigTitle"
        android:textStyle="bold" />
    

    <!-- Venue -->
    <TextView
        android:id="@+id/venueName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:textColor="#254156"
        android:textSize="@dimen/gigVenue"
        android:layout_toRightOf="@+id/artistImg"
        android:layout_below="@+id/gigTitle" />
    
        <!-- Date -->

    <TextView
        android:id="@+id/gigDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#254156"
        android:textStyle="bold"
        android:textSize="@dimen/gigDate"/>
    
    
            

    


</RelativeLayout>
